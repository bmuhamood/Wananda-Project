<p style="color: green"><%= notice %></p>

<%= link_to "New offer", new_offer_path %>
<section class="section-padding">
  <div class="container">
    <div class="row">
      <div class="col-md-12 mt-lg-4 mb-4">
        <div class="page-title-h5 d-flex align-items-center">
          <h5 class="my-0 text-gray-900">All Product Deals</h5>
          <div class="dropdown ml-auto">
            <a class="btn btn-secondary dropdown-toggle btn-sm border-white-btn" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Sort by: <span class="text-theme">Popularity</span> &nbsp;&nbsp;
            </a>
            <div class="dropdown-menu dropdown-menu-right">
              <a class="dropdown-item" href="#">Percent</a>
              <a class="dropdown-item" href="#">Amount</a>
              <a class="dropdown-item" href="#">Newest</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row mb-lg-4">

      <%= render partial: "partials/filters" %>

      <h1><%= @category.name %></h1>
      <div class="col-xl-9 col-sm-8">
        <div class="row">
          <% @offers.each do |offer| %>
          <div class="offer-card shadow-sm rounded mb-4">
            <div class="offer-card-header bg-primary p-4">
              <h5 class="text-white m-0"><%= offer.title %></h5>
            </div>
            <div class="offer-card-body p-4">
              <p><%= offer.description %></p>
              <p>Discount: <%= offer.discount %>%</p>
            </div>
            <div class="offer-card-footer p-4 d-flex justify-content-between">
              <%= link_to "Edit", edit_offer_path(offer), class: "btn btn-primary btn-sm" %>
              <%= link_to "Delete", offer_path(offer), method: :delete, data: { confirm: "Are you sure you want to delete this offer?" }, class: "btn btn-danger btn-sm" %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-xl-12 text-center">
        <a href="#" class="btn btn-primary shadow btn-sm show-more-btn">Loading <i class="fas fa-circle-notch fa-spin"></i></a>
      </div>
    </div>
  </div>    </div>
</section>

