<%= render partial: "partials/stores_search_bar" %>   
<p style="color: green"><%= notice %></p>
<section class="section-padding pt-0">
  <div class="container py-lg-4">
    <div class="row">
      <div class="col-xl-12">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
          <h1 class="h5 mb-0 text-gray-900">Top Stores</h1>
          <%= link_to "Add A Store", new_place_path, class: "d-none d-sm-inline-block btn m-1 btn-sm btn-primary shadow-sm text-white-50" %>
          <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-eye fa-sm text-white-50"></i> View All</a>
        </div>
      </div>
      <% @places.each do |place| %>
      <%= render place %>
      <% end %>
    </div>
      <div class="col-xl-12 text-center">
        <a href="#" class="btn btn-primary shadow btn-sm show-more-btn">Loading <i class="fas fa-circle-notch fa-spin"></i></a>
    </div>
  </div>
</section>